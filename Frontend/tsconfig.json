{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/doc-navbar.js",  "../components/ui/badge.tsx", "../components/ui/button.tsx", "../components/ui/card.tsx", "../components/ui/dropdown-menu.tsx", "../components/ui/progress.tsx", "../components/ui/tabs.tsx", "src/app/login/page.tsx"],
  "exclude": ["node_modules"]
}
